nginx_vhosts:
  - listen: "443 ssl http2"
    server_name: "example.com"
    server_name_redirect: "www.example.com"
    root: "/var/www/example.com"
    index: "index.php index.html index.htm"
    error_page: ""
    access_log: ""
    error_log: ""
    state: "present"
    template: "{{ nginx_vhost_template }}"
    filename: "example.com.conf"
    extra_parameters: |
      location ~ \.php$ {
          fastcgi_split_path_info ^(.+\.php)(/.+)$;
          fastcgi_pass 127.0.0.1:9000;
          fastcgi_index index.php;
          fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
          include fastcgi_params;
      }
      ssl_certificate     /etc/ssl/certs/ssl-cert-snakeoil.pem;
      ssl_certificate_key /etc/ssl/private/ssl-cert-snakeoil.key;
      ssl_protocols       TLSv1.1 TLSv1.2;
      ssl_ciphers         HIGH:!aNULL:!MD5;

postgresql_users:
  - name: example
    password: secret
    state: present

postgresql_databases:
  - name: example
    owner: example
    state: present

mysql_databases:
  - name: example
mysql_users:
  - name: example
    host: "%"
    password: secret
    priv: "example.*:ALL"

checkout_ssh_keys_root_dir: "~/.ssh"
checkout_ssh_keys:
  - id_rsa
  - id_rsa.pub

checkout_gpg_keys_root_dir: "~/.gpg"
checkout_gpg_keys:
  - id_gpg
  - id_gpg.pub

git_repos:
  - { repo: "git@github.com:ansible/ansible.git", directory: "ansible/ansible", key: "id_rsa", version: "master" }

chown_things:
  - { directory: "{{ ansible_user_dir }}/workspace/ansible/ansible", recurse: "yes", owner: "{{ ansible_user }}", group: "nginx" }
